@model IEnumerable<WorkNetwork.Models.Empresa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.razonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CUIT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numeroDeDocumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idLocalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idRubro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.razonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CUIT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroDeDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idLocalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idRubro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idEmpresa">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idEmpresa">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idEmpresa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
